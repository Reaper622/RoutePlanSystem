<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.may.routeplansystem.dao.UserDao">    <resultMap id="userMessageMap" type="com.may.routeplansystem.pojo.UserMessage">        <result property="userId" column="user_id" jdbcType="INTEGER"/>        <result property="userName" column="user_name" jdbcType="VARCHAR"/>        <result property="eMail" column="email" jdbcType="VARCHAR"/>    </resultMap>    <sql id="Base_User_List">        user_id,password    </sql>    <sql id="user_message">        user_id,user_name,eMail    </sql>    <select id="isLogin" parameterType="com.may.routeplansystem.pojo.UserMessage" resultMap="userMessageMap">        SELECT <include refid="Base_User_List"/>        FROM user        WHERE user_id = #{userId} AND password = #{password}    </select>    <insert id="insertUser" parameterType="com.may.routeplansystem.pojo.UserMessage">        INSERT        INTO user (user_id,user_name,password,email)        values (#{userId}, #{userName},#{password},#{eMail})    </insert>    <select id="userMessage" parameterType="java.lang.String" resultMap="userMessageMap">        SELECT <include refid="user_message"/>        FROM user        WHERE user_id = #{userId}    </select>    <select id="userEmail" parameterType="java.lang.String" resultMap="userMessageMap">        SELECT <include refid="user_message"/>        FROM user        WHERE email = #{eMail}    </select></mapper>