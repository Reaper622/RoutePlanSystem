<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.may.routeplansystem.dao.SolutionDao">
    <resultMap id="solution" type="com.may.routeplansystem.entity.po.Solution">
        <id column="solution_id" property="solutionId"/>
        <result column="question_id" property="questionId"/>
        <result column="route" property="route"/>
        <result column="total_dis" property="totalDis"/>
        <result column="total_time" property="totalTime"/>
        <result column="version" property="version"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <sql id="solution_columns">
        solution_id,question_id,route,total_dis,total_time,version,del_flag
    </sql>

    <select id="findSolutions" parameterType="java.lang.Integer" resultMap="solution">
        select <include refid="solution_columns"/>
        from solution
        where question_id=#{questionId}
    </select>

    <select id="findBetterTimeSolutions" parameterType="java.lang.Integer" resultMap="solution">
        select <include refid="solution_columns"/>
        from solution
        order by total_time
        limit 2
    </select>

    <select id="findBetterDistanceSolutions" parameterType="java.lang.Integer" resultMap="solution">
        select <include refid="solution_columns"/>
        from solution
        order by total_dis
        limit 2
    </select>

    <insert id="insertSolution" parameterType="com.may.routeplansystem.entity.po.Solution">
        insert into solution(route, total_dis, total_time, version)
        values (#{route}, #{totalDis}, #{totalTime}, #{version})
    </insert>

    <delete id="deleteAllSolutions" parameterType="java.lang.Integer">
        update solution
        set del_flag=1
        where question_id=#{questionId}
    </delete>

    <delete id="deleteOneVersionSolutions">
        update solution
        set del_flag=1
        where question_id=#{questionId} and version=#{version}
    </delete>


</mapper>